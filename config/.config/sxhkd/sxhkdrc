###########
# hotkeys #
###########

# terminal
super + Return
	alacritty

# launcher
super + d
	dmenu_run

# rofi
super + @space
	 rofi -theme text-menu.rasi -modi drun -show drun

# rofi windows
super + Tab
	rofi -theme text-menu.rasi -modi window -show window

# rofi fancy
alt + @space
	rofi -theme icon-menu.rasi -modi drun -show drun

# reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

########
# apps #
########

# browser
super + c
	firefox -p default-release

super + alt + c
	firefox -p drm

# browser
super + alt + m
	pavucontrol

# print screen
super + p
	maim --select -o -u > ~/Downloads/$(date +%Y%m%d%s).png

# lock screen
ctrl + alt + q
	$HOME/.bin/lock_screen.sh

#########
# bspwm #
#########

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# mode: tiled or focus
super + m
	bspc desktop -l next

# swap for biggest node
super + g
	bspc node -s biggest

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

##############
# focus/swap #
##############

# focus on the node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next node in the desktop
#super + {_,shift + }c
#	bspc node -f {next,prev}.local

# focus the next desktop in the monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
#super + {grave,Tab}
#	bspc {node,desktop} -f last

# focus on the next node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

#############
# preselect #
#############

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
#super + ctrl + shift + space
#	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

###############
# move/resize #
###############

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
